---
import Layout from "../layouts/Layout.astro";
import { productos } from "../data/index";
import Card from "../components/Card.astro";
---

<Layout title="Productos">
  <h1 class="text-7xl text-rose-500 font-bold py-16">Productos</h1>
  <ul class="grid md:grid-cols-3 grid-cols-2 gap-8">
    {
      productos.map(({ nombre, precio, image }) => (
        <Card nombre={nombre} precio={precio} image={image} />
      ))
    }
  </ul>
</Layout>
