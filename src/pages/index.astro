---
import Layout from "../layouts/Layout.astro";
import { productos } from "../data/index";
import Card from "../components/Card.astro";
import Hero from "../components/Hero.astro";
---

<Layout title="Pasteleria">
  <Hero />

  <section>
    <h2 class="text-5xl font-bold text-center text-stone-600 py-16">
      Nuestras Delicias
    </h2>
    <ul class="grid md:grid-cols-3 grid-cols-2 gap-8">
      {
        productos.map(({ nombre, precio, image }) => (
          <Card nombre={nombre} precio={precio} image={image} />
        ))
      }
    </ul>
  </section>
</Layout>
